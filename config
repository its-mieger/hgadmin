[paths]
# you can configure paths here. 
# the defaults are:
#   repopath = ~/repos
#   htpasswdpath = ~/repos/htpasswd
#   sshauthkeyspath = ~/.ssh/authorized_keys
#   hg-ssh = ~/hgadmin/hg-ssh
  
repopath = /var/repos/
htpasswdpath = /var/www/.htpasswd
sshauthkeyspath = ~/.ssh/authorized_ssh_keys

[groups]
group1 = user1, user2
group2 = user3, user5, user6

[users]
users = user1, user2,
# strange user with own description:
  user3,
# another user description
  another_user,
# and another user description
  user4
